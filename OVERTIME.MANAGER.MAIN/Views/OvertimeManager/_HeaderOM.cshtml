            OM
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggler">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(Model.navigatorActive == "Index" ? "active" : "")" aria-current="page" asp-controller="OvertimeManager" asp-action="Index">Overtime Manager</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.navigatorActive == "WorkingShiftManager" ? "active" : "")" aria-current="page" asp-controller="OvertimeManager" asp-action="WorkingShiftManager">WorkingShift Manager</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.navigatorActive == "OvertimeWorkingShiftManager" ? "active" : "")" aria-current="page" asp-controller="OvertimeManager" asp-action="OvertimeWorkingShiftManager">Overtime WorkingShift Manager</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle @(Model.navigatorActive == "JobPositionManager" || Model.navigatorActive == "OrganizationManager" || Model.navigatorActive == "EmployeeManager" ? "active" : "")" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Settings
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item @(Model.navigatorActive == "JobPositionManager" ? "active" : "")" asp-controller="OvertimeManager" asp-action="JobPositionManager">JobPosition Manager</a></li>
                        <li><a class="dropdown-item @(Model.navigatorActive == "OrganizationManager" ? "active" : "")" asp-controller="OvertimeManager" asp-action="OrganizationManager">Organization Manager</a></li>
                        <li><a class="dropdown-item @(Model.navigatorActive == "EmployeeManager" ? "active" : "")" asp-controller="OvertimeManager" asp-action="EmployeeManager">Employee Manager</a></li>
                    </ul>
                </li>
            </ul>
            <div class="navbar-right d-flex align-items-center">
                <div class="icon-notification"></div>
                <div class="icon-support"></div>
                <div class="icon-more"></div>
                <div class="avatar avatar-wrapper">
                    <img src="/assets/images/logo/logo-circle.png" alt="avatar" width="32" height="32" />
                    <div class="avatar-details">
                        <div class="details-above">
                            <img src="/assets/images/logo/logo-circle.png" alt="avatar" width="32" height="32" />
                            <p class="details-name">Ngọc Hiệp</p>
                            <p class="details-email">nnhiep582k2@gmail.com</p>
                        </div>
                        <div class="details-center">
                            <ul class="details-list">
                                <li class="details-item"><span>Đổi mật khẩu</span></li>
                                <li class="details-item"><span>Thiết lập tài khoản</span></li>
                                <li class="details-item"><span>Thiết lập bảo mật</span></li>
                                <li class="details-item"><span>Ngôn ngữ</span></li>
                            </ul>
                        </div>
                        <div class="details-bottom">
                            Đăng xuất
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<style>
    .navbar {
        box-shadow: 0px 0px 4px 1px rgba(0, 0, 0, 0.2);
        background-color: var(--color-white) !important;
        height: var(--header-height);
    }

    .dropdown-item.active {
        color: var(--color-white);
    }

    .navbar-brand {
        padding-left: 0px !important;
        margin-right: 32px !important;
        font-size: 20px !important;
    }

    .navbar-brand:hover {
        color: var(--color-resolution-blue) !important;
    }

    .navbar-brand img {
        margin-right: 10px;
    }

    .nav-item .nav-link {
        padding-left: 10px !important;
        padding-right: 24px !important;
        color: var(--color-black) !important;
    }

    .nav-link.active {
        color: var(--color-primary) !important;
    }

    .nav-item:hover .nav-link {
        color: var(--color-primary) !important;
    }

    .navbar-right {
        background-color: var(--color-white);
    }

    .navbar-right div[class^="icon"] {
        margin: 0 12px;
    }
    .navbar-right div[class^="icon"]:hover {
        background-color: var(--color-primary);
    }
    
    .avatar {
        cursor: pointer;
        margin-left: 18px;
    }

    .avatar-wrapper {
        position: relative;
    }

    .avatar-wrapper:hover .avatar-details {
        display: flex;
    }

    .avatar-details {
        position: absolute;
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 4px;
        top: 100%;
        margin-top: 20px;
        right: 0;
        z-index: 10;
        background-color: var(--color-white);
        box-shadow: 0px 1px 6px 1px rgba(0, 0, 0, 0.2);
    }

    .avatar-details::after {
        content: "";
        position: absolute;
        top: -16px;
        right: 6px;
        border-width: 11px;
        border-style: solid;
        border-color: transparent transparent white transparent;
    }

    .avatar-details::before {
        content: "";
        position: absolute;
        top: -20px;
        right: 0;
        width: 50px;
        height: 20px;
        background-color: transparent;
    }

    .details-above {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 12px 16px 0;
        border-bottom: 1px solid var(--color-alto);
    }

    .details-center {
        padding: 0 16px;
        width: 100%;
    }

    .details-list {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
    }

    .details-name {
        margin: 4px;
    }

    .details-email {
        margin-bottom: 8px;
    }

    .details-bottom,
    .details-item {
        width: 100%;
        padding: 6px 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .details-item:hover,
        .details-bottom:hover {
        cursor: pointer;
        color: var(--color-white);
        border-radius: 4px;
        background-color: var(--color-hover);
    }

    .details-bottom {
        border-top: 1px solid var(--color-alto);
        margin-top: 8px;
        padding: 0 16px 16px;
    }
</style>