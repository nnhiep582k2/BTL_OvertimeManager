            </div>
            @if (Model.isEdit == true)
            {
                <div class="btn-group-wrapper">
                    <button type="button" class="btn btn-primary btn-add">
                        <span>Save</span>
                    </button>
                    <a type="button" class="btn btn-danger btn-add" asp-controller="OvertimeManager" asp-action="Index">
                        <span>Cancel</span>
                    </a>
                </div>
            }
            else
            {
                <div class="btn-group-wrapper">
                    <a type="button" class="btn btn-primary btn-add" asp-controller="OvertimeManager" asp-action="">
                        <span><i class="fa-solid fa-pencil"></i><span class="btn-text">Edit</span></span>
                    </a>
                </div>
            }
        </div>

        <!-- Content -->
