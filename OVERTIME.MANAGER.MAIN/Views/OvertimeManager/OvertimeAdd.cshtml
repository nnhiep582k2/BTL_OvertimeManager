@using Microsoft.AspNetCore.Html;
@using OVERTIME.MANAGER.MAIN.ViewModels;
@using OVERTIME.MANAGER.MAIN.Utils.Enums;
@model OVERTIME.MANAGER.MAIN.Models.Overtime

@{
    ViewData["Title"] = "Overtime Add";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
    var navigatorActive = new NavigatorActive { navigatorActive = "Index" };
}

@section header
    {
    <partial name="~/Views/OvertimeManager/_HeaderOM.cshtml" model="navigatorActive" />
}

@section link {
    <link rel="stylesheet" href="../assets/components/overtime_add/css/style.css" />
}

<main class="container-fluid overtime-main">
    <div class="overtime-wrapper py-3">
        <!-- Heading -->
        <div class="overtime-heading d-flex align-items-center justify-content-between pb-3">
            <div class="heading-left">
                <a asp-action="Index" asp-controller="OvertimeManager"><i class="fa-solid fa-arrow-left"></i></a>
                <div class="fs-5 fw-bold heading-title"> Overtime Add</div>
            </div>
            <div class="btn-group-wrapper">
                <a type="button" class="btn btn-danger btn-add" asp-controller="OvertimeManager" asp-action="Index">
                    <span>Cancel</span>
                </a>
            </div>
        </div>

        <!-- Content -->
        <div class="overtime-container-detail overtime-container-add">
            <form asp-action="OvertimeAdd" method="POST">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="overtime-content-detail">
                    <div class="overtime-content-row row justify-content-between">
                        <div class="overtime-content-left">
                            <div class="form-group">
                                <label asp-for="EmployeeName" class="control-label"></label>
                                <select asp-for="EmployeeName" class="form-control" asp-items="ViewBag.Employees"></select>
                                <span asp-validation-for="EmployeeName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OrganizationName" class="control-label"></label>
                                <input readonly asp-for="OrganizationName" class="form-control" />
                                <span asp-validation-for="OrganizationName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ApplyDate" class="control-label"></label>
                                <input asp-for="ApplyDate" class="form-control" />
                                <span asp-validation-for="ApplyDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FromDate" class="control-label"></label>
                                <input asp-for="FromDate" class="form-control" />
                                <span asp-validation-for="FromDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BreakTimeFrom" class="control-label"></label>
                                <input asp-for="BreakTimeFrom" class="form-control" />
                                <span asp-validation-for="BreakTimeFrom" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="BreakTimeTo" class="control-label"></label>
                                <input asp-for="BreakTimeTo" class="form-control" />
                                <span asp-validation-for="BreakTimeTo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ToDate" class="control-label"></label>
                                <input asp-for="ToDate" class="form-control" />
                                <span asp-validation-for="ToDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="WorkingShiftName" class="control-label"></label>
                                <select asp-for="WorkingShiftName" class="form-control" asp-items="ViewBag.WorkingShifts"></select>
                                <span asp-validation-for="WorkingShiftName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="OverTimeInWorkingShiftName" class="control-label"></label>
                                <select asp-for="OverTimeInWorkingShiftName" class="form-control" asp-items="ViewBag.OWs"></select>
                                <span asp-validation-for="OverTimeInWorkingShiftName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="overtime-content-right">
                            <div class="form-group">
                                <label asp-for="Reason" class="control-label"></label>
                                <textarea asp-for="Reason" class="form-control"></textarea>
                                <span asp-validation-for="Reason" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ApprovalName" class="control-label"></label>
                                <select asp-for="ApprovalName" class="form-control" asp-items="ViewBag.Approvals"></select>
                                <span asp-validation-for="ApprovalName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StatusOvertime" class="control-label"></label>
                                <select asp-for="StatusOvertime" class="form-control" asp-items="ViewBag.StatusOvertimes"></select>
                                <span asp-validation-for="StatusOvertime" class="text-danger"></span>
                            </div>
                            <div class="form-group btn-submit-add">
                                <input type="submit" value="Save" class="btn btn-primary btn-add" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="overtime-content-below">
                <div class="overtime-below-left">
                    <span>LIST OVERTIME EMPLOYEES</span>
                    <form asp-action="Index" method="get">
                        <input type="text" name="searchQuery" class="form-control overtime-details-search" placeholder="Search" value="" />
                    </form>
                    <div class="content-below-data">No data to display</div>
                </div>
                <div class="overtime-below-right">
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#insertModal">Add</button>
                </div>
            </div>
        </div>
    </div>
</main>

@section script {
    <script>
    </script>
}