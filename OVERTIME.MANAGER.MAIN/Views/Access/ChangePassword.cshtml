@using OVERTIME.MANAGER.MAIN.ViewModels;
@model UserChangePwd

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
    var navigatorActive = new NavigatorActive { navigatorActive = "Index" };
}

@section header {
    <partial name="~/Views/OvertimeManager/_HeaderOM.cshtml" model="navigatorActive" />
}

@section link {
    <link rel="stylesheet" href="../assets/components/overtime_add/css/style.css" />
    <link rel="stylesheet" href="../assets/components/change_pwd/css/style.css" />
}

<main class="container-fluid overtime-main">
    <div class="overtime-wrapper py-3">
        <!-- Heading -->
        <div class="overtime-heading d-flex align-items-center justify-content-between pb-3">
            <div class="heading-left">
                <a asp-action="Index" asp-controller="OvertimeManager"><i class="fa-solid fa-arrow-left"></i></a>
                <div class="fs-5 fw-bold heading-title"> Change Password</div>
            </div>
            <div class="btn-group-wrapper">
                <a type="button" class="btn btn-danger btn-add" asp-controller="OvertimeManager" asp-action="Index">
                    <span>Cancel</span>
                </a>
            </div>
        </div>

        <!-- Content -->
        <div class="overtime-container-detail overtime-container-add">
            <form asp-action="ChangePassword" class="form-change-pwd" method="POST">
                <div class="form-group">
                    <label asp-for="OldPwd">Old Password<span class="required">*</span></label>
                    <div class="flex-col">
                        <input asp-for="OldPwd" class="form-control" />
                        <span asp-validation-for="OldPwd" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewPwd">New Password<span class="required">*</span></label>
                    <div class="flex-col">
                        <input asp-for="NewPwd" class="form-control" />
                        <span asp-validation-for="NewPwd" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save change" class="btn btn-primary btn-add" />
                </div>
            </form>
        </div>
    </div>
</main>
